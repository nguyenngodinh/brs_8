<form class="navbar-form navbar-left" role="search" action="/books">
  <div class="input-group">
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">Book Title</span>
      <input type="text" class="form-control" 
             name="title_query" placeholder="Book title..."/><br>
    </div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">Book Categories</span>
      <select name="category_query" class="form-control">
        <option value="all">All</option>
        <%= Category.all.each do |category| %>
        <option value=<%=category.id%>><%=category.name %></option>
        <% end %>
      </select>
    </div>
    <button type="submit" class="btn btn-default">
      <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
    </button><br>
  </div>
</form>
